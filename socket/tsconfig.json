{
  "compilerOptions": {
    "outDir": "./out",
    "rootDir": "./src",        // Your TypeScript source folder (replace with srcDIR if applicable)
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",            // Include all TypeScript files in your source directory
    "node_modules/.prisma/client"  // Ensure Prisma's generated client is included
  ],
  "exclude": ["node_modules", "src/index3.ts"]
}
